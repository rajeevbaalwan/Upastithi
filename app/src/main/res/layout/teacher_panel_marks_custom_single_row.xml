<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:hint="ROLL NO."
            android:padding="5dp"
            android:layout_weight="8"
            android:id="@+id/teacher_edit_marks_rollno"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:hint="Sess I"
            android:id="@+id/teacher_edit_marks_ses1"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:hint="Sess II"
            android:id="@+id/teacher_edit_marks_ses2"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:hint="Sem"
            android:id="@+id/teacher_edit_marks_sem"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="18dp"
            android:layout_weight="1"
            android:hint="Total"
            android:id="@+id/teacher_edit_marks_total"/>


    </LinearLayout>

</LinearLayout>