<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/teacher_view_marks_student_roll_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="CE-2213-2K14"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:paddingLeft="22dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:paddingRight="2dp"/>
                <TextView
                    android:id="@+id/teacher_view_marks_student_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:gravity="center_horizontal|center_vertical"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:padding="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sess I"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textColor="#545454"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sess II"
                    android:padding="2dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:textColor="#545454"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sem"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#545454"
                    android:textSize="17sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#545454"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/teacher_edit_marks_sess_1_marks"
                    android:textColor="@android:color/black" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/teacher_edit_marks_sess_2_marks"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/teacher_edit_marks_sem_marks"
                    android:textColor="@android:color/black"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:id="@+id/teacher_edit_marks_total_marks"
                    android:textColor="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
