<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="1dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#bfbdbd"
        android:background="#fdfafa">

        <LinearLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fdfafa">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:id="@+id/marks_subject_student"
                android:background="#fdfafa" />

            <LinearLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdfafa">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sess I"
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:background="#fdfafa" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sess II"
                android:padding="2dp"
                android:layout_weight="1"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:background="#fdfafa" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sem"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:background="#fdfafa" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:padding="2dp"
                    android:layout_marginRight="2dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:background="#fdfafa" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fdfafa">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/ses1_student"
                    android:background="#fdfafa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/ses2_student"
                    android:background="#fdfafa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/sem_student"
                    android:background="#fdfafa" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="50"
                    android:padding="2dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:id="@+id/total_student"
                    android:background="#fdfafa" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>